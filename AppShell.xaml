<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SwiftPropsal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SwiftPropsal"
    Shell.FlyoutBehavior="Flyout"
    Title="SwiftPropsal">

    <!-- Use a NavigationPage for this ShellContent -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage">
        <ShellContent.Content>
            <NavigationPage>
                <x:Arguments>
                    <local:MainPage />
                </x:Arguments>
            </NavigationPage>
        </ShellContent.Content>
    </ShellContent>

</Shell>
